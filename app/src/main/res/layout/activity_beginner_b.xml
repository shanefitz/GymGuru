<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".BeginnerB">

    <TextView
        android:id="@+id/dayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Workout B"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="360dp"
        android:layout_height="105dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayText">

        <Button
            android:id="@+id/squatsBtn"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:onClick="onClickSquat"
            android:text="Squats 5x5 "
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/squatsImage"
            android:layout_width="190dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/squatty" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="360dp"
        android:layout_height="105dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <Button
            android:id="@+id/ohpBtn"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:onClick="onClickOverHeadPress"
            android:text="Overhead Press 5x5 "
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/ohpImage"
            android:layout_width="700dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ohp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="360dp"
        android:layout_height="105dp"
        android:layout_marginBottom="52dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/deadliftBtn"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:onClick="onClickDeadlift"
            android:text="Deadlift 5x5 "
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/deadliftImage"
            android:layout_width="200dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/deadlig" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>